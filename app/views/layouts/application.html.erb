    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    
    <ul class="navbar-nav mb-2 mb-lg-0 d-flex justify-content-around container-fluid" >
        <li class="nav-item">
          <%= link_to "Home", root_path, :class => "nav-link active"  %>
        </li>
    
        <li class="nav-item">
          <%= link_to "Jamil's Logistics", root_path, :class => "nav-link active"  %>
        </li>
      <% if current_user && current_user.user_admin %> 
        <li class="nav-item">
          <%= link_to "Customers List", customers_path, :class => "nav-link active"  %>
        </li>
        <% if current_user.super_admin %>
        <li class="nav-item">
          <%= link_to "All Users", users_path, :class => "nav-link active"  %>
        </li>
      <% end %>

      
        <% end %>


        <% if current_user %>

                    <li class="nav-item">
            <%= current_user.email %>
          </li>
          
          <li class="nav-item">
          <%= link_to 'Sign Out', destroy_user_session_path, class: 'btn bg-danger', data: { turbo_method: :delete } %>
          </li>
        <% end %>

    </ul>
</nav>

