<h1 class="card text-center m-2">...Your Satisfaction Our Priority!!!</h1>


<%= render 'form' %>

  <% if @customers.size < 2 %>
  <% @customers.each do |customer| %>
    <div class="card text-center">
      <div class="card-body">
      <h3 class="card-title">PACKAGE NUMBER : <%=customer.uniq_id%></h3>
      </div>
    </div>


    <% customer.movements.each do |movement| %>

      <div class="card-body text-center">
          <h3 class="card-header">
            Tracking Update
          </h3>

          <h5 class="card-title"> <%=movement.detail%> <h5>
          <h1> <%= movement.tracking_time.strftime("%a, %b %d, %Y, %I:%M %p") %> <%=time_ago_in_words(movement.tracking_time) %> Ago</h1>

      </div>

    <% end %>
  <% end %>
<% end%>